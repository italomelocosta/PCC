<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/bdford?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping resource="Controle/Item.hbm.xml"/>
    <mapping resource="Controle/Cotacao.hbm.xml"/>
    <mapping resource="Controle/RequisicaoItem.hbm.xml"/>
    <mapping resource="Controle/Grupouser.hbm.xml"/>
    <mapping resource="Controle/Estoque.hbm.xml"/>
    <mapping resource="Controle/Pedido.hbm.xml"/>
    <mapping resource="Controle/Funcionario.hbm.xml"/>
    <mapping resource="Controle/Endereco.hbm.xml"/>
    <mapping resource="Controle/NfEntradaItem.hbm.xml"/>
    <mapping resource="Controle/PedidoItem.hbm.xml"/>
    <mapping resource="Controle/Fornecedor.hbm.xml"/>
    <mapping resource="Controle/NfEntrada.hbm.xml"/>
    <mapping resource="Controle/RequisicaoEstoque.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
